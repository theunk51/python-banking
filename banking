class Account:
    def __init__(self):
        self.balance = balance
        self.amount
    def account():
        balance = 0.00
    
    def deposit(amount):
        balance = balance + amount
    
    def withdrawal(amount):
        balance = balance - amount
    
    def getBalance():
        return balance
    
